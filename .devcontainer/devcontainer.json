{
    "name": "nfcore",

    //"image": "nfcore/devcontainer:latest",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "remoteUser": "root",
    "privileged": true,

    "remoteEnv": {
        "NXF_HOME": "/home/vscode/.nextflow-home",
        "SHELL": "/bin/bash"
    },

    "workspaceMount": "source=${localWorkspaceFolder},target=${localWorkspaceFolder},type=bind",
    "workspaceFolder": "${localWorkspaceFolder}",

    // Configure tool-specific properties.
    "customizations": {
        // Configure properties specific to VS Code.
        "vscode": {
            // Set *default* container specific settings.json values on container create.
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/bin/python",
                "python.linting.enabled": true
            },

            // Add the IDs of extensions you want installed when the container is created.
            "extensions": ["nf-core.nf-core-extensionpack"]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1.0.11": {
            "digest": "sha256:464564228ccdd6028f01f8a62a3cfbaf76e9ba7953b29ac0e53ba2c262604312"
        }
    }
}
